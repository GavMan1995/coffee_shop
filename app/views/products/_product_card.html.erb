

<div class="col s12 m3">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title">
        <%= @product['name'] %>
      </span>
      <p>
         <%= @product['description'] %>
      </p>
    </div>
    <div class="card-action">
      <button class="edit_product btn" href=<%= @product[:id] %>>Edit</button>
      <button class="delete_product btn" href=<%= @product[:id] %>>Delete</button>
    </div>
  </div>
</div>
